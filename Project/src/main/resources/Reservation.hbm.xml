<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="webproject.Models">

    <class name="Reservation" table="Reservations">
        <id name="id" column="Id">
            <generator class="increment"/>
        </id>
		<one-to-one name="reserver" class="webproject.Models.User"
			cascade="save-update" foreign-key="reserverid"></one-to-one>
			
		<one-to-one name="reservationItem" class="webproject.Models.ReservationItem"
			cascade="save-update" foreign-key="reservableid"></one-to-one>
			
		<property name="startTime" type="timestamp" column="starttime"/>
		<property name="endTime" type="timestamp" column="endtime"/>
    </class>

</hibernate-mapping>
