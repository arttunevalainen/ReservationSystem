    <class name="ReservationItem" table="Reservable">
        <id name="id" column="Id">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <property name="info"/>
		<one-to-one name="owner" class="webproject.Models.User"
			cascade="save-update"></one-to-one>
		<set name="reservations" cascade="all">
         <key column="reservableid"/>
         <one-to-many class="Reservation"/>
      </set>
		
